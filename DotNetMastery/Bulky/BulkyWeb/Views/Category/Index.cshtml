@{
}
@model List<Category>
<div class="container">
    <div class="row">
        <div class="col-6">
            <p class="fs-2"><strong>Category List</strong>
            </p>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus"></i>Add Category</a>
        </div>
    </div>
    <table class="table table-bordered table-striped">

        <thead>
            <tr>
                <th>Name</th>
                <th>Display Order</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var i in Model.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>@i.Name</td>
                    <td>@i.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group">
                            <a asp-action="Edit" asp-route-id="@i.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-action="Delete" asp-route-id="@i.Id" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>

