@{
}
@model Category

<h1>Delete Category!</h1>

<form method="post" asp-action="Delete">
    <div class="border pb-3 mt-4">
        <input type="hidden" asp-for="Id" />
        <div class="row pb-2">
            <p class="text-primary fs-2"><strong>Delete Category</strong></p>
        </div>

        <div class="mb-3">
            <label>Category Name</label>
            <input type="text" asp-for="Name" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input type="text" asp-for="DisplayOrder" class="form-control" disabled />
        </div>
        <div class="row">
            <div class="col-md-6 col-md-3">
                <button class="btn btn-danger form-control" type="submit">Delete</button>
            </div>
            <div class="col-md-6 col-md-3">
                <button class="btn btn-outline-primary form-control" asp-action="Index">View List</button>
            </div>
        </div>
    </div>
</form>

@*This will add client side validation to the project that will use server side validation without refreshing the page*@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}